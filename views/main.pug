        table(class="table table-dark table-striped-columns")
            thead
                tr
                    th(scope="col") Title
                    th(scope="col") Price
                    th(scope="col") Thumbnail
                    th(scope="col") id
            tbody
            if(productos.length === 0)
                tr 
                    td(style="color: red;") NO HAY DATOS
                    td(style="color: red;") NO HAY DATOS
                    td(style="color: red;") NO HAY DATOS
                    td(style="color: red;") NO HAY DATOS 
            else
                each val in productos
                    tr
                        td=val.title
                        td=val.price
                        td=val.thumbnail
                        td=val.id
