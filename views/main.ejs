<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Productos</title>
</head>
<body>
    <table class="table table-dark table-striped-columns">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
                <th scope="col">id</th>
            </tr>
        </thead>
        <tbody>
            <% if (productos.length === 0) { %>
                <tr>
                    <td colspan="3" style="color: red;">No hay datos</td>
                </tr>
            <% }else{ %>
            <% productos.forEach(function(producto) { %>
            <tr>
                <td><%= producto.title %></td>
                <td><%= producto.price %></td>
                <td><img width="77" height="77" src=<%= producto.thumbnail %>></td>
                <td><%= producto.id %></td>
            </tr>
            <% }); } %>
        </tbody>
    </table>
    <button type="button" class="btn btn-dark" style="width: 130px; margin-left: 50%; transform: translateX(-50%);" onclick="location.href='/'">Formulario</button>
</body>
</html>
